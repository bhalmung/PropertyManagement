 @model DomainModels.Restaurant



<h1>@(Model.Id>0?"Edit ":"Create") Restaurant</h1>
@using (Html.BeginForm("Edit","Restaurants",FormMethod.Post))
{ 
    @Html.HiddenFor(x=>x.Id)
    @Html.AntiForgeryToken();
<div class="form-group">
  @Html.LabelFor(x => x.Name):
  @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
</div>

<div class="form-group">
    @Html.LabelFor(x => x.Address):
    @Html.TextAreaFor(x => x.Address,   new { @class = "form-control" } )
</div>

<div class="form-group">
    @Html.LabelFor(x => x.PostCode):
    @Html.TextBoxFor(x => x.PostCode,  new { @class = "form-control" }  )

</div>

<div class="form-group">
    @Html.LabelFor(x => x.City):
    @Html.TextBoxFor(x => x.City ,     new { @class = "form-control" }  )
</div>

 
<button type="submit" class="btn btn-Primary">@(Model.Id > 0 ? "Edit " : "Create") Restaurant</button>
<button type="reset" class="btn btn-default">Reset</button>
@Html.ActionLink("Go Back","Index",null,new {@class="btn btn-default" })
}